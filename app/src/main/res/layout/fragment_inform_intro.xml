<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/spacing_medium_large">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:paddingTop="@dimen/spacing_huge">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ill_ansteckung" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/NextStep.Text.Bold.Purple"
				android:layout_marginTop="@dimen/spacing_large"
				android:text="@string/inform_positive_subtitle"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				style="@style/NextStep.Text.Title"
				android:text="@string/inform_positive_title"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/NextStep.Text"
				android:layout_marginTop="@dimen/spacing_larger"
				android:gravity="center_horizontal"
				android:text="@string/inform_positive_long_text"/>

			<Button
				android:id="@+id/inform_intro_button_continue"
				style="@style/NextStep.Button.Purple"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="@dimen/spacing_enormous"
				android:layout_marginBottom="@dimen/spacing_huger"
				android:text="@string/inform_continue_button"/>

		</LinearLayout>

		<Button
			android:id="@+id/inform_intro_cancel_button"
			style="@style/NextStep.Button.Transparent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:text="@string/cancel" />

	</FrameLayout>
</ScrollView>