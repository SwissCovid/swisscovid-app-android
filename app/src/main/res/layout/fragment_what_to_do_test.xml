<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/grey_light"
	android:orientation="vertical">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/wtd_test_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:navigationContentDescription="@string/android_accessibility_back_button"
		app:navigationIcon="@drawable/ic_arrow_back"
		app:title="@string/inform_detail_navigation_title" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/spacing_large"
			android:layout_marginTop="@dimen/spacing_larger"
			android:layout_marginEnd="@dimen/spacing_large"
			android:layout_marginBottom="@dimen/spacing_very_large"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/wtd_inform_faq_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					style="@style/NextStep.Text.Bold"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/spacing_small"
					android:text="@string/inform_detail_faq1_title" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<ImageView
						android:layout_width="@dimen/icon_size"
						android:layout_height="@dimen/icon_size"
						android:layout_marginRight="@dimen/spacing_medium_large"
						android:src="@drawable/ic_verified_user"
						android:tint="@color/purple_main" />

					<TextView
						style="@style/NextStep.Text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/inform_detail_faq1_text" />

				</LinearLayout>

				<TextView
					style="@style/NextStep.Text.Bold"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/spacing_very_large"
					android:layout_marginBottom="@dimen/spacing_small"
					android:text="@string/inform_detail_faq2_title" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:paddingBottom="@dimen/spacing_medium">

					<ImageView
						android:layout_width="@dimen/icon_size"
						android:layout_height="@dimen/icon_size"
						android:layout_marginRight="@dimen/spacing_medium_large"
						android:src="@drawable/ic_key"
						android:tint="@color/purple_main" />

					<TextView
						style="@style/NextStep.Text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/inform_detail_faq2_text" />

				</LinearLayout>

				<TextView
					style="@style/NextStep.Text.Bold"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/spacing_very_large"
					android:layout_marginBottom="@dimen/spacing_small"
					android:text="@string/inform_detail_faq3_title" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:paddingBottom="@dimen/spacing_medium">

					<ImageView
						android:layout_width="@dimen/icon_size"
						android:layout_height="@dimen/icon_size"
						android:layout_marginRight="@dimen/spacing_medium_large"
						android:src="@drawable/ic_person"
						android:tint="@color/purple_main" />

					<TextView
						style="@style/NextStep.Text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/inform_detail_faq3_text" />

				</LinearLayout>

			</LinearLayout>

			<Button
				android:id="@+id/wtd_inform_faq_button"
				style="@style/NextStep.Button.Outlined.Purple"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginStart="@dimen/spacing_medium"
				android:layout_marginTop="@dimen/spacing_large"
				android:layout_marginEnd="@dimen/spacing_medium"
				android:layout_marginBottom="@dimen/spacing_huger"
				android:drawableRight="@drawable/ic_launch_purple"
				android:paddingStart="@dimen/padding_start_icon_button"
				android:text="@string/faq_button_title" />

		</LinearLayout>

	</ScrollView>

</LinearLayout>